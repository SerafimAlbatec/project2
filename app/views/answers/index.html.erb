<h1>Listing answers</h1>

<table class="table table-hover">
  <col width="2000">
  <col width="10">
  <col width="10">
  <col width="10">
  <thead>
    <tr class='info'>
      <th>Name</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.name %></td>
        <td><%= link_to 'Show', answer, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) , class: 'btn btn-info btn-xs'%></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_answer_path(:question_id => params[:question_id]), class: 'btn btn-success' do  %>
<i class="glyphicon glyphicon-plus"></i> New Answer
<% end %>
