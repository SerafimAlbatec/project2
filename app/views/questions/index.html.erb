

<h1>Listing questions</h1>

<table class="table table-hover">
  <thead>
    <tr class='info'>
      <th>Name</th>
      <th>Answer number</th>
      <th>User</th>
      <th>Poll</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %> <!-- Bazw where etsi wste na emfanizw ayta me id poll -->
      <tr>
        <td><%= link_to question.name, answers_path(:question_id => question.id)  %></td>
        <td><%= question.answer_number %></td>
        <td><%= question.user_id %></td>
        <td><%= question.poll_id %></td>
        <td><%= link_to 'Show', question, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_question_path(question), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- Pernaw to poll_id mesa po to link-->
<%= link_to new_question_path(:poll_id => params[:poll_id]), class: 'btn btn-success' do  %>
<i class="glyphicon glyphicon-plus"></i> New Question
<% end %>